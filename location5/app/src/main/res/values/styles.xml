<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="LoginBtn" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">#6F4CA8</item>
        <item name="colorButtonNormal">#FF4081</item>
    </style>

    <style name="FormBtn" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">#6F4CA8</item>
        <item name="colorButtonNormal">#FF4081</item>
    </style>

    <style name="EditTextField">
        <item name="android:padding">5dp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:textSize">20dp</item>
        <item name="android:background">@color/edittext_background</item>
        <item name="android:textColor">@color/edittext_color</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="EditTextFieldNext" parent="@style/EditTextField">
        <item name="android:imeOptions">actionNext</item>
    </style>
    <style name="EditTextFieldDone" parent="@style/EditTextField">
        <item name="android:imeOptions">actionDone</item>
    </style>

    <declare-styleable name="PageIndicator">
        <attr name="indicator_spacing" format="dimension" />
        <attr name="indicator_type" format="enum">
            <enum name="circle" value="0" />
            <enum name="fraction" value="1" />
        </attr>
    </declare-styleable>
</resources>
